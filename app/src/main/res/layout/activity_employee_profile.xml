<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Employee Details Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Details"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

    <!-- Profile Image Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="4dp">

      <ImageView
          android:id="@+id/profile_image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/user"/>
    </androidx.cardview.widget.CardView>

    <!-- Employee Name -->
    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <!-- Employee Details Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp">

        <!-- Full Name Label and Field -->
        <TextView
            android:text="Full Name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/usernameTextView"
            style="@style/ProfileTextStyle"/>

        <!-- Username Label and Field -->
        <TextView
            android:text="Username"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/emailTextView"
            style="@style/ProfileTextStyle"/>

        <!-- Email Label and Field -->
        <TextView
            android:text="Email"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phoneTextView"
            style="@style/ProfileTextStyle"/>

        <!-- Phone Label and Field -->
        <TextView
            android:text="Phone Number"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userTypeTextView"
            style="@style/ProfileTextStyle"/>

        <!-- User Type Label and Field -->
        <TextView
            android:text="User Type"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/birthDateTextView"
            style="@style/ProfileTextStyle"/>

        <!-- Birth Date Label and Field -->
        <TextView
            android:text="Birth Date"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/hireDateTextView"
            style="@style/ProfileTextStyle"/>

        <!-- Hire Date Label and Field -->
        <TextView
            android:text="Hire Date"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/salaryTextView"
            style="@style/ProfileTextStyle"/>

        <!-- Annual Salary Label and Field -->
        <TextView
            android:text="Annual Salary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/additionalInfoTextView"
            style="@style/ProfileTextStyle"/>

        <!-- Additional Info Label and Field -->
        <TextView
            android:text="Additional Information"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/additionalInfoTextView"
            style="@style/ProfileTextStyle"
            tools:ignore="DuplicateIds" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

          <Button
              android:id="@+id/updateButton"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:layout_marginEnd="8dp"
              android:text="Update Profile"
              android:textAllCaps="false"
              android:backgroundTint="@android:color/holo_blue_dark"
              style="@style/Widget.MaterialComponents.Button"/>

          <Button
              android:id="@+id/deleteButton"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:text="Delete Profile"
              android:textAllCaps="false"
              style="@style/Widget.MaterialComponents.Button.OutlinedButton"
              android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>
      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
  </LinearLayout>
</ScrollView>
