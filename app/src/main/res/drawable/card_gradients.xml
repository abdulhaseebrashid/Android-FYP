<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Blue Gradient for Attendance Card -->
    <item android:id="@+id/card_gradient_blue" tools:ignore="StateListReachable">
        <shape>
            <gradient
                android:startColor="#4481EB"
                android:endColor="#04BEFE"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Purple Gradient for Employees Card -->
    <item android:id="@+id/card_gradient_purple" tools:ignore="StateListReachable">
        <shape>
            <gradient
                android:startColor="#8E2DE2"
                android:endColor="#4A00E0"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Green Gradient for Geo-Fence Card -->
    <item android:id="@+id/card_gradient_green">
        <shape>
            <gradient
                android:startColor="#11998e"
                android:endColor="#38ef7d"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Blue Gradient for Live Feed Button -->
    <item android:id="@+id/button_gradient">
        <shape>
            <gradient
                android:startColor="#4481EB"
                android:endColor="#04BEFE"
                android:angle="45"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Pressed state for cards -->
    <item android:id="@+id/card_gradient_pressed"
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#3A8DFF"
                android:endColor="#2979FF"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Pressed state for button -->
    <item android:id="@+id/button_gradient_pressed"
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#3A8DFF"
                android:endColor="#2979FF"
                android:angle="45"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>